    <form name="contact" method="POST" data-netlify="true">
      <h2 class="mb-4">Demande de devis :</h2>
      <div class="row">
        <div class="col-12 col-md-6 required">
          <input type="text" name="Nom" placeholder=" Nom / Prénom" aria-required="true" required />
        </div>
        <div class="col-12 col-md-6 required">
          <select class="surf-level" name="Niveau" aria-required="true" required>
            <option value="Aucun"> Niveau de Surf</option>
            <option value="Debutant">Débutant</option>
            <option value="Intermediaire">Intermédiaire</option>
            <option value="Confirme">Confirmé</option>
            <option value="Expert">Expert</option>
          </select>
        </div>
      </div>
      <div class="row">
        <div class="col-12 col-md-6">
          <input type="tel" name="Telephone" placeholder=" Téléphone" />
        </div>
        <div class="col-12 col-md-6">
          <input type="text" name="Poids-Taille" placeholder=" Poids / Taille (Optionnel)" />
        </div>
      </div>
      <div class="row">
        <div class="col-12 col-md-6 required">
          <input type="email" name="Email" placeholder=" E-mail" aria-required="true" required />
        </div>
        <div class="col-12 col-md-6 sav">
          <input type="checkbox" id="sav" name="SAV" />
          <label for="sav"> SAV / Réparation</label>
        </div>
      </div>
      <div class="row">
        <div class="col-12 required">
          <textarea type="text" name="Description" placeholder=" Description" rows="6" aria-required="true" required></textarea>
        </div>
      </div>
      <div class="row">
        <div class="col-12 col-md-6">
          <select name="Modele" class="model">
            <option value="Aucun">Modèle</option>
            {% for board in collections.models %}
              <option value="{{ board.data.titre }}">{{ board.data.titre }} - {{ board.data.prix }}</option>
            {% endfor %}
            <option value="CUSTOM">CUSTOM - Sur Devis</option>
          </select>
        </div>
      </div>
      <h3>Caractéristiques : </h3>
      <h4>Dimensions <small>(en pieds et pouces)</small></h4>
      <div class="row">
        <div class="col-12 col-md-6 double-select">
          <label> Longueur </label>
          <div class="double-select-container">
            <select name="Longueur-Pieds" id="longueur">
